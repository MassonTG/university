//Дозволяє визначити сімейство алгоритмів, інкапсулювати кожен з них і забезпечити їх взаємозамінність. 
//Це дає можливість змінювати поведінку програми під час виконання без модифікації клієнтського коду.

#include <iostream>
using namespace std;

class Strategy {
public:
    virtual void execute() = 0;
};

class ConcreteStrategyA : public Strategy {
public:
    void execute() override { cout << "Algorithm A\n"; }
};

class ConcreteStrategyB : public Strategy {
public:
    void execute() override { cout << "Algorithm B\n"; }
};

class Context {
    Strategy* strategy;
public:
    void setStrategy(Strategy* s) { strategy = s; }
    void doWork() { strategy->execute(); }
};
