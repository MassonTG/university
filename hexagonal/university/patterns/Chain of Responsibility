//Дозволяє передавати запит послідовно через ланцюг обробників, доки один із них не виконає дію. Це зменшує залежність між відправником і отримувачем.

#include <iostream>
using namespace std;

class Handler {
protected:
    Handler* next;
public:
    Handler() : next(nullptr) {}
    void setNext(Handler* n) { next = n; }
    virtual void handle(int level) {
        if (next) next->handle(level);
    }
};

class ConcreteHandler1 : public Handler {
public:
    void handle(int level) override {
        if (level == 1) cout << "Handled by Handler1\n";
        else Handler::handle(level);
    }
};

class ConcreteHandler2 : public Handler {
public:
    void handle(int level) override {
        if (level == 2) cout << "Handled by Handler2\n";
        else Handler::handle(level);
    }
};
