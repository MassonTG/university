//Дозволяє створювати сімейства пов’язаних об’єктів без залежності від їхніх конкретних класів.

#include <iostream>
using namespace std;

// Абстрактні продукти
class Button { public: virtual void render() = 0; };
class Checkbox { public: virtual void render() = 0; };

// Конкретні продукти
class WinButton : public Button { public: void render() override { cout << "Windows Button\n"; } };
class WinCheckbox : public Checkbox { public: void render() override { cout << "Windows Checkbox\n"; } };

class MacButton : public Button { public: void render() override { cout << "Mac Button\n"; } };
class MacCheckbox : public Checkbox { public: void render() override { cout << "Mac Checkbox\n"; } };

// Абстрактна фабрика
class GUIFactory {
public:
    virtual Button* createButton() = 0;
    virtual Checkbox* createCheckbox() = 0;
};

// Конкретні фабрики
class WinFactory : public GUIFactory {
public:
    Button* createButton() override { return new WinButton(); }
    Checkbox* createCheckbox() override { return new WinCheckbox(); }
};

class MacFactory : public GUIFactory {
public:
    Button* createButton() override { return new MacButton(); }
    Checkbox* createCheckbox() override { return new MacCheckbox(); }
};
