//Дозволяє динамічно додавати нову поведінку об’єктам без зміни їхнього коду.

#include <iostream>
using namespace std;

class Component {
public:
    virtual void operation() = 0;
};

class ConcreteComponent : public Component {
public:
    void operation() override { cout << "Base operation\n"; }
};

class Decorator : public Component {
protected:
    Component* comp;
public:
    Decorator(Component* c) : comp(c) {}
    void operation() override { comp->operation(); }
};

class ExtraDecorator : public Decorator {
public:
    ExtraDecorator(Component* c) : Decorator(c) {}
    void operation() override {
        Decorator::operation();
        cout << " + Extra feature\n";
    }
};
