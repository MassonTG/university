//Дозволяє узгодити інтерфейси двох класів, які не сумісні між собою. Використовується як "перехідник"

#include <iostream>
using namespace std;

// Старий інтерфейс
class OldPrinter {
public:
    void printOld() { cout << "Printing in old format\n"; }
};

// Новий інтерфейс
class IPrinter {
public:
    virtual void print() = 0;
};

// Адаптер
class PrinterAdapter : public IPrinter {
    OldPrinter* oldPrinter;
public:
    PrinterAdapter(OldPrinter* p) : oldPrinter(p) {}
    void print() override { oldPrinter->printOld(); }
};
