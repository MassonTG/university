//Класи повинні бути відкриті для розширення, але закриті для модифікації.

#include <iostream>
using namespace std;

// не правильно: додаючи нову форму, треба міняти існуючий код
class Shape {
public:
    int type; // 1 - circle, 2 - square
};

double area(Shape s) {
    if (s.type == 1) return 3.14 * 5 * 5; // circle
    else if (s.type == 2) return 5 * 5;   // square
    return 0;
}

// правильно: використовуємо поліморфізм
class IShape {
public:
    virtual double area() const = 0;
};

class Circle : public IShape {
public:
    double area() const override { return 3.14 * 5 * 5; }
};

class Square : public IShape {
public:
    double area() const override { return 5 * 5; }
};
