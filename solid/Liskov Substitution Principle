//Об’єкти підкласів повинні бути взаємозамінними з об’єктами базового класу.

#include <iostream>
using namespace std;

// не правильно: підклас порушує контракт базового класу
class Bird {
public:
    virtual void fly() { cout << "Flying..." << endl; }
};

class Penguin : public Bird {
public:
    void fly() override { cout << "Penguins can't fly!" << endl; } // порушення
};

// правильно: робимо окрему ієрархію
class BirdBase {
public:
    virtual void move() = 0;
};

class FlyingBird : public BirdBase {
public:
    void move() override { cout << "Flying..." << endl; }
};

class PenguinCorrect : public BirdBase {
public:
    void move() override { cout << "Swimming..." << endl; }
};
