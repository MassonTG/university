//Дозволяє зберігати і відновлювати попередній стан об’єкта без порушення інкапсуляції.

#include <iostream>
#include <string>
using namespace std;

class Memento {
    string state;
public:
    Memento(string s) : state(s) {}
    string getState() { return state; }
};

class Originator {
    string state;
public:
    void setState(string s) { state = s; }
    Memento save() { return Memento(state); }
    void restore(Memento m) { state = m.getState(); }
    void show() { cout << "State: " << state << endl; }
};
