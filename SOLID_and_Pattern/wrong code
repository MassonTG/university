// ❌ Порушення принципу єдиної відповідальності 
// Цей клас одночасно:
// 1) створює користувача
// 2) відправляє email
// 3) логіює події

public class BadUserManager
{
    public void CreateUser(string username, string email)
    {
        // логіка створення користувача
        Console.WriteLine($"User {username} created");

        // ❌ логіка відправки email прямо тут
        Console.WriteLine($"Sending email to {email}");

        // ❌ логування теж тут
        Console.WriteLine($"LOG: Created user {username}");
    }
}
