// ✔ Відповідає тільки за створення користувача
public class UserService
{
    private readonly EmailService _emailService;
    private readonly LoggerService _logger;

    public UserService(EmailService emailService, LoggerService logger)
    {
        _emailService = emailService;
        _logger = logger;
    }

    public void CreateUser(string username, string email)
    {
        Console.WriteLine($"User {username} created");

        _emailService.SendWelcomeEmail(email);
        _logger.Log($"Created user {username}");
    }
}




// ✔ Відповідає тільки за відправку email-повідомлень
public class EmailService
{
    public void SendWelcomeEmail(string email)
    {
        Console.WriteLine($"Sending welcome email to {email}");
    }
}


// ✔ Відповідає тільки за логування
public class LoggerService
{
    public void Log(string message)
    {
        Console.WriteLine($"LOG: {message}");
    }
}

